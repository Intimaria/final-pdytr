curl -sfL https://direnv.net/install.sh | bash
echo 'eval "$(direnv hook bash)"' >> ~/.bashrc
sudo zypper install pyenv
sudo zypper install -t pattern devel_basis
sudo zypper install -t pattern devel_C_C++
pyenv install 3.9.9
sudo zypper install sshpass xz-devel tk-dev tk-devel libffi-devel libbz2-devel
sudo zypper install python-devel python3-devel python3-tk python-tk readline-devel sqlite3 sqlite3-devel

cd final
echo "layout pyenv 3.9.9" > .envrc
direnv allow
python3 -m pip install ansible

